

<div class="banner">
  <div class="container">
    <div class="card">
  <h2><%= @restaurant.name %></h2>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>
  <p><%= @restaurant.category %></p>

  <ul><% @restaurant.reviews.each do |review| %>
  <li><%= review.content %>, <%= (review.rating.to_s + " stars")%></li>
  <% end %>
  </ul>

  <%= link_to "Back", restaurants_path, class: "btn" %>
  <%= link_to "Write a Review", new_restaurant_review_path(@restaurant), class: "btn" %>
    </div>
  </div>
</div>



